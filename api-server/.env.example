# Redis connection string (Valkey or Redis URL)
REDIS_SERVICE_URL=rediss://your-redis-host:port

# Comma-separated list of allowed frontend origins for CORS
CORS_ORIGINS=http://localhost:5173

# Port for your Express + Socket.IO server
PORT=9000

# Base domain used to generate project subdomain URLs
BASE_URL=yourdomain.dev

# AWS configuration
AWS_REGION=your-aws-region
AWS_SECRET_ACCESS_KEY=your-secret-access-key
ACCESSKEY_KEY_ID=your-access-key-id

AWS_CLUSTER_ID=your-ecs-cluster-arn
AWS_TASK_ID=your-ecs-task-arn

# Comma-separated list of subnets (used for Fargate networking)
AWS_SUBNETS=subnet-1,subnet-2,subnet-3

# Comma-separated list of security groups
AWS_SECURITY_GROUP=sg-xxxxxxxxxxxxx

# Name of the ECS container image defined in the task definition
AWS_ECR_IMAGE=your-ecr-image-name
